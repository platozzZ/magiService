@import 'style/weui.wxss';
/* @import "dist/common/index.wxss"; */

page{
  box-sizing: border-box;
  background: #f2f3f5;
  color: #353535;
  position: relative;
} 
.container{
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}
.scroll{
  flex:1;
  overflow-y:auto;
  position: relative;
}
button.form_button{
  background-color: transparent;
  padding: 0;
  margin: 0;
  position: absolute;
  top: 0;
  left: 0;
  border: 0;
  font-size: 0rpx;
  color: transparent;
  width: 100%;
  height: 100%;
}
button.form_button::after{
  content:'';
  width:0;
  height:0;
  -webkit-transform:scale(1);
  transform:scale(1);
  display:none;
  background-color:transparent;
}
.weui-loadmore__tips_in-line{
  background: #f2f3f5;
}
.weui-loadmore{
  margin: 15px auto 0;
  font-size: 13px;
  
}